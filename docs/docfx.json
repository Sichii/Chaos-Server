{
    "metadata": [
        {
            "src": [
                {
                    "src": "../",
                    "files": ["**.csproj"],
                    "exclude": ["**/Tests/**", "**/Tools/**"]
                }
            ],
            "dest": "api"
        }
    ],
    "build": {
        "content": [
            {
                "files": ["api/**.yml", "api/index.md"]
            },
            {
                "files": [
                    "articles/**.md",
                    "articles/**/toc.yml",
                    "toc.yml",
                    "*.md"
                ]
            }
        ],
        "resource": [
            {
                "files": ["images/**"]
            }
        ],
        "overwrite": [
            {
                "files": ["apidoc/**.md"],
                "exclude": ["obj/**", "_site/**"]
            }
        ],
        "dest": "_site",
        "globalMetadata": {
            "_appTitle": "Chaos Server Docs",
            "_appName": "Chaos Server Docs",
            "_appFaviconPath": "images/chaos.ico",
            "_appLogoPath": "images/chaosico.png",
            "_enableSearch": true,
            "_disableSideFilter": false,
            "_enableNewTab": true,
            "_disableContribution": false,
            "_disableBreadcrumb": false
        },
        "globalMetadataFiles": [],
        "fileMetadataFiles": [],
        "template": [
            "default",
            "templates/singulinkfx",
            "plugins/memberpage.2.59.4/content",
            "plugins/memberpage-extras"
        ],
        "postProcessors": [],
        "markdownEngineName": "markdig",
        "noLangKeyword": false,
        "keepFileLink": false,
        "disableGitFeatures": false
    }
}
